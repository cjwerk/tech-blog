{{> post-info post}}

{{#if loggedIn}}
<div class="w3-row">

    <div class="w3-container">
    <h3 class="card-header"></h3>
    <form class="w3-card-4 w3-margin w3-white comment-form edit-post-form" id="comment-form">
        <label class="form-label">Comment</label>
        <input name="comment-body" class="form-input" />
        <button type="submit" class="w3-button w3-padding-large w3-white w3-border">Submit</button>
        <label for="post-title" class="form-label">Title</label>
        <input name="post-title" type="text" value="{{post.title}}" class="form-input" />
        <label class="form-label" for="content">Content</label>
        <div class="w3-row">
        <div class="w3-col m8 s12">
        <input name="content" type="text" value="{{post.content}}" class="form-input" />
        <button type="submit" class="w3-button w3-padding-large w3-white w3-border">Update Post</button>
        <button type="button" class="w3-button w3-padding-large w3-white w3-border delete-post-btn">Delete Post</button>
    </form>
    
      </div>
    </div>
  </div>
</div>
{{/if}}

{{> comments post.comments}}

{{#if loggedIn}}
<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>
<script src="/js/comment.js"></script>
{{/if}}